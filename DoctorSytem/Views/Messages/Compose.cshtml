@{
    ViewData["Title"] = "Compose Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container mt-5" style="max-width: 700px;">
    <h3 class="text-primary mb-4"><i class="fas fa-envelope"></i> Contact Your Doctor</h3>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success"><i class="fas fa-check-circle"></i> @TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger"><i class="fas fa-exclamation-circle"></i> @TempData["Error"]</div>
    }

    <form asp-action="Send" method="post">
        <div class="form-group mb-3">
            <label for="toEmail">Doctor's Email</label>
            <input type="email" class="form-control" name="toEmail" placeholder="e.g. doctor@example.com" required />
        </div>

        <div class="form-group mb-3">
            <label for="subject">Subject</label>
            <input type="text" class="form-control" name="subject" required />
        </div>

        <div class="form-group mb-3">
            <label for="body">Message</label>
            <textarea class="form-control" name="body" rows="6" placeholder="Write your message..." required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane"></i> Send Email
        </button>
    </form>
</div>
