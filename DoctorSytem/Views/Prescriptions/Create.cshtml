@model DoctorSystem.DTOs.CreatePrescriptionDto

@{
    ViewData["Title"] = "Create Prescription";
}

<div class="container mt-4">
    <h2>Create New Prescription</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AppointmentId" />

                <div class="form-group mb-3">
                    <label asp-for="MedicationName" class="control-label"></label>
                    <input asp-for="MedicationName" class="form-control" />
                    <span asp-validation-for="MedicationName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DosageInstructions" class="control-label"></label>
                    <textarea asp-for="DosageInstructions" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="DosageInstructions" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create Prescription" class="btn btn-primary" />
                    <a asp-controller="Appointments" asp-action="Details" asp-route-id="@Model.AppointmentId" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 