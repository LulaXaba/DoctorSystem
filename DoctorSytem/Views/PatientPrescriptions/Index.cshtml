@model List<DoctorSystem.Models.Prescription>

@{
    ViewData["Title"] = "My Prescriptions";
}

<div class="container mt-4">
    <h2>My Prescriptions</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You don't have any prescriptions yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Medication</th>
                        <th>Dosage Instructions</th>
                        <th>Issued Date</th>
                        <th>Appointment</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prescription in Model)
                    {
                        <tr>
                            <td>@prescription.MedicationName</td>
                            <td>@prescription.DosageInstructions</td>
                            <td>@prescription.IssuedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <a asp-controller="Appointments" asp-action="Details" asp-route-id="@prescription.AppointmentId">
                                    View Appointment
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div> 